{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "name": "Comments",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Content": {
      "type": "text",
      "required": true,
      "maxLength": 400,
      "minLength": 8,
      "regex": "[a-zA-Z0-9@=\\-'\"]+"
    },
    "article": {
      "via": "comments",
      "model": "article"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "comments"
    }
  }
}
